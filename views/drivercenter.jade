extends layout

block content
  div.container
    div.content
      h1 Drivers
      if drivers
        table.drivers-table
          thead
            tr
              th Drivers
          tbody
            each driver in drivers
              tr
                td
                  driver.num
                td
                  driver.rating
                td
                  driver.total_rides_completed
                td
                  button(type="button", onClick="javascript:removeDriver.bind(this, driver.num)")
      else
        h4 No drivers in system

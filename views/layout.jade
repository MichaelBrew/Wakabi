  body
    nav.navbar.navbar-default( role="navigation" )
      .navbar-header
        button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#") Wakabi

      #navbar-inverse.collapse.navbar-collapse
        ul.nav.navbar-nav
          if tab == 'Home'
            li.active: a( href="/") Home
          else
            li: a(href="/") Home
          if tab == 'Driver Center'
            li.active: a( href="/drivercenter" ) Driver Center
          else
            li: a( href="/drivercenter" ) Driver Center
          if tab == 'Rider Center'
            li.active: a( href="/ridercenter" ) Rider Center
          else
            li: a( href="/ridercenter" ) Rider Center
          if tab == 'Analytics'
            li.active: a( href="/analytics") Analytics
          else
            li: a( href="/analytics") Analytics

    block content
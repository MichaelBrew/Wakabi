html
  head
    title= Wakabi
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/flatly/bootstrap.min.css' )
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet/less', href='/stylesheets/index.less')
